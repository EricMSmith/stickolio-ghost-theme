{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<h1 class="header_index"><a href="/portfolio">Portfolio</a></h1>

<div id="portfolio_index" class="pure-g-r clearfix">
    <div class="pure-u-1-3">
        <div class="feature">
            <img src="{{#if post}}{{#post}}{{author.name}}{{/post}}{{else}}{{#foreach posts}}{{#if @first}}{{author.image}}{{/if}}{{/foreach}}{{/if}}" alt="">
        </div>
    </div>
    <div class="pure-u-1-3">
        <div class="feature">
            <img src="{{#if post}}{{#post}}{{author.name}}{{/post}}{{else}}{{#foreach posts}}{{#if @first}}{{author.image}}{{/if}}{{/foreach}}{{/if}}" alt="">
        </div>
    </div>
    <div class="pure-u-1-3">
        <div class="feature">
            <img src="{{#if post}}{{#post}}{{author.name}}{{/post}}{{else}}{{#foreach posts}}{{#if @first}}{{author.image}}{{/if}}{{/foreach}}{{/if}}" alt="">
        </div>
    </div>
</div>

<h1 class="header_index"><a href="/blog">Blog</a></h1>


{{#foreach posts}}
<article class="post">
    <header class="post-header">
        <h1><a href="{{url}}" title="Read &quot;{{title}}&quot;">{{title}}</a></h1>
        
        <!-- Post meta -->
        {{> post-meta}}
    </header>
    <div class="post-content">
        <p>{{excerpt}}&hellip;</p>
    </div>
    <a href="{{url}}" class="button button-default button-keep-reading" title="Read &quot;{{title}}&quot;">Keep reading &rarr;</a>
</article>
{{/foreach}}

{{!! After all the posts, we have the previous/next pagination links }}

{{#if pagination.prev}}
    <hr>
    {{pagination}}
{{else}}
    {{#if pagination.next}}
        <hr>
        {{pagination}}

    {{/if}}
{{/if}}