<section class="sidebar-data-holder">
    <div class="spinner" role="spinner"><div class="spinner-icon"></div></div>
    <nav class="main-nav">
        <button class="nav-control"><i class="icon-hamburguer"></i></button>
        {{> nav}}
    </nav>
    <div class="logo"><a href="/" title="Back to home">{{!@blog.title}}Illustrator<br/>Eric M. Smith</a></div>                

    <!-- Author info -->
    {{#if post}}
        {{#post}}
            {{> author}}
        {{/post}}
    {{else}}
        {{#foreach posts}}
            {{#if @first}}
                {{> author}}
            {{/if}}
        {{/foreach}}
    {{/if}}

    <!-- Social media badges -->
    {{> social-media}}
    
    <footer id="main-footer">
        <p>&copy; {{date format="YYYY"}} 
            {{#if post}}{{#post}}{{author.name}}{{/post}}{{else}}{{#foreach posts}}{{#if @first}}{{author.name}}{{/if}}{{/foreach}}{{/if}}. 
            All rights reserved. <a href="/about#">Site Credits</a>
        </p>
    </footer>
</section>